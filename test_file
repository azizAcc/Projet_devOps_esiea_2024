                    }
                }
            }
        }
        /* on peut utiliser ou faire un Skip si la condition est remplie */
        stage('TEST') {
            steps {
                script {
                    if (params.SKIP_TEST) {
                        echo 'Skipping tests...'
                    } else {
                        echo 'Testing app...'
                        echo 'Test OK!'
                        /* Fin de l'action  Skip */
                        /* A vous de terminer ce super script ----- Bon courage */
                    }
                }
            }
        }
