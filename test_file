                        sleep 10
                    } else if (mois == "Fevrier" && today > '1' && today <= '20') {
                        echo "Attention, nous sommes le $today du mois, il ne vous reste plus beaucoup de temps pour faire vos objectifs."
                        sleep 10
                    }
                }
            }
        }
        stage('Avril') {
            steps {
                script {
                    def challenges = "${params.CHALLENGES}"
